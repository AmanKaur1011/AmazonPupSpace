@model AmazonPupSpace.Models.ViewModels.TricksForDog
@{
    ViewBag.Title = "Details";
}

<a href="/Dog/List" class="btn btn-lg btn-info mb-4"><i class="fa-solid fa-chevron-left p-2 me-2"></i>Go back to Trick List</a>

<div class="rounded-3 p-3" style="background-color: #f5f5f5;">
    <h2 class="text-capitalize">@Model.SelectedDog.DogName</h2>
    <p><strong>Age:</strong> @Model.SelectedDog.DogAge</p>
    <p><strong>Birthday:</strong> @Model.SelectedDog.DogBirthday.ToString("MMMM dd, yyyy")</p>
    <p><strong>Breed:</strong> @Model.SelectedDog.DogBreed</p>
    <p><strong>Owner:</strong> @Model.SelectedDog.FirstName @Model.SelectedDog.LastName</p>

    <div class="alert alert-light">
        <h3 class="fs-4">Tricks in @Model.SelectedDog.DogName Wheelhouse. </h3>
        @foreach (var trickLearnt in Model.TricksLearnt)
        {
           <a href="/Trick/Details/@trickLearnt.TrickId"  class="btn btn-outline-secondary d-inline-block">@trickLearnt.TrickName</a>
        }
    </div>

    <div class="d-flex align-items-center mt-3">
        <a href="/Dog/Edit/@Model.SelectedDog.DogId" class="btn btn-warning me-2 mb-2">Update Dog</a>
        <a href="/Dog/DeleteConfirm/@Model.SelectedDog.DogId" class="btn btn-danger mb-2">Delete Dog</a>
    </div>
</div>
