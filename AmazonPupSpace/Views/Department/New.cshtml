
@{
    ViewBag.Title = "New";
}

<h2 class="mb-4">Add New Department</h2>
<a href="/Department/List" class="btn btn-lg btn-info mb-4"><i class="fa-solid fa-chevron-left p-2 me-2"></i>Go back</a>

    <div class="container ">
        <div class="row">
            <div class="col-md-6">
                <form action="/Department/Create" method="POST">
                    <div class="mb-3">
                        <label class="form-label">Department Name : </label> <input type="text" class="form-control" name="DepartmentName" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Department Manager : </label> <input type="text" class="form-control" name="DepartmentManager" />
                    </div>
                    <div style="display:none">
                        <label class="form-label">Department Id</label> <input type="number" class="form-control" name="DepartmentId" />
                    </div>
                    <div class="mb-3">
                        <input type="submit" value="Add Department" class="btn btn-success" />

                    </div>
                </form>
            </div>

        </div>
    </div>
