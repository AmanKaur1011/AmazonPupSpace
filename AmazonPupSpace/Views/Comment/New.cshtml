﻿
@{
    ViewBag.Title = "New";
}

<h2 class="mb-4">Add new Comment</h2>

<form action="/Comment/Create" method="post">
    <div class="col-md-5 form-group mb-3">
        <label class="mb-2" for="CommentText">CommentText</label>
        <textarea class="form-control" id="CommentText" name="CommentText" required></textarea>
    </div>
    <div class="col-md-5 form-group mb-3">
        <label class="mb-2" for="DateCommented">Date Commented</label>
        <input type="date" class="form-control" id="DateCommented" name="DateCommented" required />
    </div>
    <div class="col-md-5 form-group mb-3">
        <label class="mb-2" for="PostId">PostId</label>
        <input type="number" class="form-control" id="PostId" name="PostId" required />
    </div>
    <div class="col-md-5 form-group mb-3">
        <label class="mb-2" for="EmployeeId">EmployeeId</label>
        <input type="number" class="form-control" id="EmployeeId" name="EmployeeId" required />
    </div>
    <div class="form-group">
        <input class="btn btn-secondary" type="submit" value="Add Comments" />
    </div>
</form>