﻿@model AmazonPupSpace.Models.Post

@{
    ViewBag.Title = "Edit";
}

<h2 class="mb-4">Update Art</h2>

<form action="/Post/Update/@Model.PostId" method="POST" class="row" enctype="multipart/form-data">
    <div style="display:none;">
        <input class="form-control" type="text" name="PostId" value="@Model.PostId" />
    </div>
    <div class="form-group col-md-6 mb-3">
        <label>Post Title:</label>
        <input class="form-control" type="text" name="Title" value="@Model.Title" />
    </div>
    <div class="form-group col-12 mb-3">
        <label>Caption:</label>
        <textarea class="form-control" name="Caption" rows="5">@Model.Caption</textarea>
    </div>
    <div class="form-group col-md-6 mb-3">
        <label for="ImageURL" class="form-label">Upload Image</label>
        <input class="form-control" type="file" id="ImageURL" name="ImageURL" accept="image/gif, image/jpeg, image/jpg, image/png">
    </div>
    <div class="form-group col-md-4 mb-3">
        <label>Date Posted:</label>
        <input class="form-control" type="date" name="PostDate" value="@Model.PostDate.ToString("yyyy-MM-dd")" />
    </div>
    <div class="form-group col-md-4 mb-3">
        <label>Employee Id:</label>
        <input class="form-control" type="number" name="EmployeeId" value="@Model.EmployeeId" />
    </div>
    <div class="form-group mb-3">
        <input class="btn btn-warning" type="submit" value="Update Post" />
    </div>
</form>