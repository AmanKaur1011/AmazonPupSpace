﻿﻿@model AmazonPupSpace.Models.Post

@{
    ViewBag.Title = "DeleteConfirm";
}

<h2 class="mb-3">Are you sure you want to delete this art?</h2>
<div class="p-4 rounded-2" style="background-color: #f5f5f5;">
    <div class="row">
        <div class="post-info col-12 col-md-6 col-lg-7">
            <h2>@Model.Title</h2>
            <p><strong>Description:</strong><br /> @Model.Caption</p>
            <p><strong>Year Installed:</strong> @Model.PostDate.ToString("yyyy")</p>
            <div class="d-flex align-items-center">
                <a href="/Post/List" class="btn btn-danger  me-2 mb-2">Cancel</a>
                <form action="/Post/Delete/@Model.PostId" method="POST">
                    <input type="submit" value="Confirm Delete" class="btn btn-success mb-2" />
                </form>
            </div>
        </div>
        <div class="art-image col-12 col-md-6 col-lg-5 mt-4 mt-md-0">
            @{
                string imageurl = "/Content/Images/Posts/default.jpg";
                if (Model.ImageURL)
                {
                    imageurl = "/Content/Images/Posts/" + Model.PostId + "." + Model.PicExtension;
                }
            }
            <img class="img-fluid rounded-2" src="@imageurl" alt="@Model.Title" />
        </div>
    </div>
</div>