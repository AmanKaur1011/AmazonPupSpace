@model AmazonPupSpace.Models.ViewModels.DetailsEmployee
@{
    ViewBag.Title = "Details";
}

<h2 class="text-center display-4">Employee Details</h2>
<br />
<a class="d-inline-flex focus-ring py-1 px-2 text-decoration-none border rounded-2 mb-4" href="/Employee/List">Go back to List</a>
<br />
<span>
    <a class="btn btn-danger me-3" href="/Employee/DeleteConfirm/@Model.SelectedEmployee.EmployeeId">Delete Employee</a>
    <a class="btn btn-warning" href="/Employee/Edit/@Model.SelectedEmployee.EmployeeId">Update Employee</a>
</span>
<div class="container text-center mt-5">
    <!--image source:https://i.ebayimg.com/images/g/VdsAAOSwiFJj5VV9/s-l1200.webp-->
    <img src="~/Content/Images/hero.png" height="350" width="300" class="rounded col float-start" alt="amazon Peccy Pins clipart" />
    <div class="p-5  d-inline-block text-start text-primary-emphasis bg-primary-subtle border border-primary-subtle rounded-3">
        <p class="mb-2 fs-4"><strong>First Name : </strong>@Model.SelectedEmployee.FirstName </p>
        <p class="mb-2 fs-4"><strong>Last Name : </strong>@Model.SelectedEmployee.LastName </p>
        <p class="mb-2 fs-4"><strong>Email : </strong>@Model.SelectedEmployee.Email </p>
        <p class="mb-2 fs-4"><strong>Employee Id : </strong>@Model.SelectedEmployee.EmployeeId </p>
        <p class="mb-2 fs-4"><strong>Hire Date : </strong>@Model.SelectedEmployee.HireDate </p>
        <p class="mb-2 fs-4"><strong>Department Name : </strong>@Model.SelectedEmployee.DepartmentName </p>
        <div class="mt-3">
            <h3> Dogs Owned by the Employee</h3>
            @foreach (var dog in Model.RelatedDogs)
            {
                <a class=" fs-5 link-offset-2 link-offset-3-hover link-underline link-underline-opacity-0 link-underline-opacity-75-hover" href="/Dog/Details/@dog.DogId">@dog.DogName (Breed - @dog.DogBreed ) </a>
                <br />

            }


        </div>

    </div>
    

</div>