@model AmazonPupSpace.Models.EmployeeDto
@{
    ViewBag.Title = "DeleteConfirm";
}

<h2 class="text-center mb-3">Are you sure you want to delete this employee?</h2>
<h2 class="text-center text-danger-emphasis display-6">@Model.FirstName @Model.LastName</h2>
<div class=" text-center fs-6">Hire Date: @Model.HireDate </div>

<div class="d-flex align-items-center justify-content-center mt-4">
    <a href="/Post/List" class="btn btn-danger  me-2 mb-2">Cancel</a>
    <form action="/Employee/Delete/@Model.EmployeeId" method="POST">
        <input class="btn btn-success mb-2" type="submit" value="Confirm Delete" />
    </form>
</div>

